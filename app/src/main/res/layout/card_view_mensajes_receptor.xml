<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="2sp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                cardview:cardCornerRadius="10sp"
                app:cardBackgroundColor="#111c31"
                app:contentPadding="5sp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#111c31"
                        android:padding="5sp">
                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/fotoPerfilMensaje"
                            android:background="#111c31"
                            android:layout_width="24sp"
                            android:layout_height="24sp"
                            android:src="@mipmap/ic_launcher"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#111c31"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:background="#111c31"
                            android:paddingBottom="5sp"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/nombreMensaje"
                                android:textColor="#569cd6"
                                android:background="#111c31"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/zero"
                                android:textSize="10sp"
                                android:layout_weight="1"/>
                            <TextView
                                android:id="@+id/horaMensaje"
                                android:textColor="#ce9178"
                                android:background="#111c31"
                                android:textSize="10sp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="00:00"/>
                        </LinearLayout>
                        <TextView
                            android:id="@+id/mensajeMensaje"
                            android:textColor="#d0d1d2"
                            android:background="#111c31"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/zero"
                            android:visibility="gone"/>
                        <ImageView
                            android:id="@+id/mensajeFoto"
                            android:background="#111c31"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:adjustViewBounds="true"
                            android:visibility="gone"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2">


        </LinearLayout>
    </LinearLayout>



</androidx.appcompat.widget.LinearLayoutCompat>